{
  "expo": {
    "name": "SongGuess",
    "slug": "songguess",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0f"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.songguess.app",
      "infoPlist": {
        "NSCameraUsageDescription": "SongGuess needs camera access to scan QR codes for joining game rooms."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0f"
      },
      "package": "com.songguess.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "navigationBar": {
        "visible": "immersive",
        "backgroundColor": "#0a0a0f"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SongGuess to access your camera to scan QR codes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SongGuess to access your photos to set a custom avatar."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b209ef0c-2b19-46c8-8530-ede87805ffca"
      }
    }
  }
}
